@model IEnumerable<MVC.Day26.Exer.Models.BookStore>

@{
    ViewBag.Title = "BookStore";
}




<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h2>Book Details</h2>

            <table class="table table-striped table-hover">
                <tr>
                    <th>BookName</th>
                    <th>Topic</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
                @foreach (var prd in Model)
                {
                    <tr>
                        <td>@prd.BookName</td>
                        <td>@prd.Topic</td>
                        <td>@prd.Price</td>
                        <td>@prd.Quantity</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

